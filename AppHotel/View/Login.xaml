<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppHotel.View.Login"
             BackgroundColor="#23272a">
    
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Hotel :>" FontSize="80" HorizontalTextAlignment="Center" Margin="0, 20, 0, 50" Style="{StaticResource fonteCustomizada}"/>

            <Label Text="Login" FontSize="50" HorizontalTextAlignment="Center" Margin="0, 0, 0, 20" Style="{StaticResource fonteCustomizada}" />

            <Frame CornerRadius="20"
                   Margin="20, 0, 20, 0"
                   VerticalOptions="StartAndExpand"
                   Padding="20, 30, 20, 40">

                <StackLayout>
                    <Label Text="Usuário:" FontSize="20" />
                    <Entry x:Name="txt_usuario" />
                    <Label Text="Senha:" FontSize="20" />
                    <Entry IsPassword="True" x:Name="txt_senha" />
                </StackLayout>
            </Frame>
            <Button Text="Entrar" Margin="0, 50, 0, 100" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>