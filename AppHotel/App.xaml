<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppHotel.App">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="DarkRed" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
        </Style>

        <Style x:Key="Textobranco" TargetType="Label">
            <Setter Property="TextColor" Value="White" />
        </Style>

        <Style x:Key="lbl" TargetType="Label">
            <Setter Property="FontSize" Value="20" />
        </Style>

        <Style x:Key="fonteCustomizada" TargetType="Label" BaseResourceKey="Textobranco">
            <Setter Property="FontFamily">
                <Setter.Value>
                    <OnPlatform x:TypeArguments="x:String" Android="IndieFlower-Regular.ttf#IndieFlower-Regular" />
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>